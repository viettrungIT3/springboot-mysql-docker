{
  "info": {
    "name": "SpringBoot MySQL Demo E2E",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "E2E: register/login → create product → list products → create order → confirm order; includes CSV import/export"
  },
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "exec": [
          "// Ensure timestamp is always available",
          "if (!pm.collectionVariables.get('timestamp')) { pm.collectionVariables.set('timestamp', Date.now()); }"
        ],
        "type": "text/javascript"
      }
    }
  ],
  "item": [
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/actuator/health"
      }
    },
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              {"key":"Content-Type","value":"application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"admin\",\n  \"password\": \"securepass123\",\n  \"email\": \"admin@example.com\",\n  \"fullName\": \"System Administrator\"\n}"
            },
            "url": "{{baseUrl}}/auth/register"
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Login success', function () { pm.response.to.have.status(200); });",
                  "var json = {}; try { json = pm.response.json(); } catch(e){}",
                  "if (json && json.token) { pm.collectionVariables.set('token', json.token); }"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {"key":"Content-Type","value":"application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"admin\",\n  \"password\": \"securepass123\"\n}"
            },
            "url": "{{baseUrl}}/auth/login"
          }
        }
      ]
    },
    {
      "name": "Products",
      "item": [
        {
          "name": "Create Product",
          "request": {
            "method": "POST",
            "header": [
              {"key":"Content-Type","value":"application/json"},
              {"key":"Authorization","value":"Bearer {{token}}"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Laptop Demo\",\n  \"description\": \"Demo product\",\n  \"price\": 1299.99,\n  \"quantityInStock\": 5\n}"
            },
            "url": "{{baseUrl}}/api/v1/products"
          }
        },
        {
          "name": "List Products (Page)",
          "request": {
            "method": "GET",
            "header": [
              {"key":"Authorization","value":"Bearer {{token}}"}
            ],
            "url": "{{baseUrl}}/api/v1/products?page=0&size=5&sort=id,desc"
          }
        },
        {
          "name": "Export Products (CSV)",
          "request": {
            "method": "GET",
            "header": [
              {"key":"Accept","value":"text/csv"},
              {"key":"Authorization","value":"Bearer {{token}}"}
            ],
            "url": "{{baseUrl}}/api/v1/products/export-csv"
          }
        },
        {
          "name": "Import Products (CSV)",
          "request": {
            "method": "POST",
            "header": [
              {"key":"Authorization","value":"Bearer {{token}}"}
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {"key":"file","type":"file","src":"{{csvFile}}"}
              ]
            },
            "url": "{{baseUrl}}/api/v1/products/import-csv"
          }
        }
      ]
    },
    {
      "name": "Orders",
      "item": [
        {
          "name": "Create Order",
          "request": {
            "method": "POST",
            "header": [
              {"key":"Content-Type","value":"application/json"},
              {"key":"Authorization","value":"Bearer {{token}}"},
              {"key":"Idempotency-Key","value":"demo-{{timestamp}}"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"customerId\": 1,\n  \"items\": [\n    { \"productId\": 1, \"quantity\": 1 }\n  ]\n}"
            },
            "url": "{{baseUrl}}/api/v1/orders"
          }
        },
        {
          "name": "Confirm Order",
          "request": {
            "method": "POST",
            "header": [
              {"key":"Authorization","value":"Bearer {{token}}"}
            ],
            "url": "{{baseUrl}}/api/v1/orders/{{orderId}}/confirm"
          }
        }
      ]
    }
  ],
  "variable": [
    {"key":"baseUrl","value":"http://localhost:8080"},
    {"key":"token","value":""},
    {"key":"orderId","value":"1"},
    {"key":"csvFile","value":"products.csv"},
    {"key":"timestamp","value":"{{$timestamp}}"}
  ]
}


