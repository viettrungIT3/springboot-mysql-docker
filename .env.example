# ------------------ Database ------------------
# Database Configuration
MYSQL_ROOT_PASSWORD=root
MYSQL_DATABASE=appdb
MYSQL_USER=appuser
MYSQL_PASSWORD=apppass
MYSQL_PORT=3306
MYSQL_HOST=mysql

# Database Connection
SPRING_DATASOURCE_URL=jdbc:mysql://${MYSQL_HOST}:${MYSQL_PORT}/${MYSQL_DATABASE}?useSSL=false&allowPublicKeyRetrieval=true&serverTimezone=UTC
SPRING_DATASOURCE_DRIVER_CLASS_NAME=com.mysql.cj.jdbc.Driver

# ------------------ Backend ------------------
# Spring Configuration
SPRING_PROFILES_ACTIVE=dev
BACKEND_PORT=8080

# JPA Configuration
JPA_DDL_AUTO=none
JPA_SHOW_SQL=true

# Seed Configuration (for dev/test)
APP_SEED_ENABLED=true
APP_SEED_PRODUCTS=20
APP_SEED_CUSTOMERS=10

# JWT Configuration
JWT_SECRET=mySecretKey123456789012345678901234567890
JWT_EXPIRATION=86400000

# Logging
LOG_LEVEL=INFO

# ------------------ Fontend ------------------
